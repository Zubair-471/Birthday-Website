{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Local Server",
            "type": "shell",
            "command": "python",
            "args": ["-m", "http.server", "8000"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Serving HTTP on",
                    "endsPattern": "^Serving HTTP on"
                }
            }
        },
        {
            "label": "Start Live Server",
            "type": "shell",
            "command": "npx",
            "args": ["live-server", "--port=5500", "--no-browser"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Live reload enabled",
                    "endsPattern": "^Live reload enabled"
                }
            }
        },
        {
            "label": "Open in Browser",
            "type": "shell",
            "command": "start",
            "args": ["index.html"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": "cmd",
                "args": ["/c", "start", "index.html"]
            },
            "osx": {
                "command": "open",
                "args": ["index.html"]
            },
            "linux": {
                "command": "xdg-open",
                "args": ["index.html"]
            }
        }
    ]
} 